@model com.vorwardit.wordsworthcms.Modules.MarkdownModel

<h4>Markdown Editor</h4>
<hr/>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "" })
    @Html.TextAreaFor(model => model.Content, 20, 30, new { @class = "", style = "width:100%;font-family: 'Courier New', Courier, monospace;" })
    @Html.ValidationMessageFor(model => model.Content, "", new { @class = "" })
    <br/>
    <button type="button" class="cmsTypeChangeModuleTypeButton">Anderes Modul</button>
    <button type="button" class="cmsTypeCancelButton">Abbrechen</button>
    <button type="button" class="cmsTypeSaveSettingsButton">Speichern</button>
}

