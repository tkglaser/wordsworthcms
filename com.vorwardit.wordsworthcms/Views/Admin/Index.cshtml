@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Index";
    Layout = null;
}
<!DOCTYPE html>
<html lang="de-de" ng-app="app">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.ApplicationNameLong CMS</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <base href="/admin">
    <!-- Bootstrap 3.3.5 -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link href="~/Content/AdminLTE.min.css" rel="stylesheet" />
    <!-- AdminLTE Skins. Choose a skin from the css/skins
         folder instead of downloading all of them to reduce the load. -->
    <link href="~/Content/skins/skin-green-light.min.css" rel="stylesheet" />
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <link href="~/Content/codemirror5/lib/codemirror.min.css" rel="stylesheet" />
    <link href="~/Content/codemirror5/ans-codemirror.min.css" rel="stylesheet" />
    <link href="~/Content/codemirror5/addon/display/fullscreen.css" rel="stylesheet" />
    <link href="~/Content/codemirror-local.css" rel="stylesheet" />
    <style>
        table tr td:last-child {
                text-align: right;
        }
        [ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak {
          display: none !important;
        }
        </style>
</head>
<body class="hold-transition skin-green-light sidebar-mini">
    <!-- Site wrapper -->
    <div class="wrapper">
        <header class="main-header">
            <!-- Logo -->
            <a href="#/" class="logo">
                <!-- mini logo for sidebar mini 50x50 pixels -->
                <span class="logo-mini"><b>@ViewBag.ApplicationNameShort</b></span>
                <!-- logo for regular state and mobile devices -->
                <span class="logo-lg"><b>@ViewBag.ApplicationNameLong</b>CMS</span>
            </a>
            <!-- Header Navbar: style can be found in header.less -->
            <nav class="navbar navbar-static-top" role="navigation">
                <!-- Sidebar toggle button-->
                <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <!-- User Account: style can be found in dropdown.less -->
                        <li class="dropdown user user-menu">
                            <a class="dropdown-toggle" data-toggle="dropdown">
                                <span class="hidden-xs">@User.Identity.GetUserName()</span>
                            </a>
                            <ul class="dropdown-menu">
                                <!-- User image -->
                                <li class="user-header">
                                </li>
                                <!-- Menu Footer-->
                                <li class="user-footer">
                                    <div class="pull-left">
                                        <a class="btn btn-default btn-flat">Profile</a>
                                    </div>
                                    <div class="pull-right">
                                        <a href="javascript:document.getElementById('logoutForm').submit()" class="btn btn-default btn-flat">Sign out</a>
                                    </div>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>

@using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
{
    @Html.AntiForgeryToken()
}

        <!-- =============================================== -->
        <!-- Left side column. contains the sidebar -->
        <aside class="main-sidebar ng-cloak">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- sidebar menu: : style can be found in sidebar.less -->
                <ul class="sidebar-menu" ng-controller="MenuController as ctrl">
                    <li class="header">HAUPTMEN&Uuml;</li>
                    <li ng-repeat="item in ctrl.menuItems" active-link="{{item.link}}">
                        <a ng-href="#{{item.link}}">
                            <i class="fa" ng-class="item.icon"></i> <span>{{item.name}}</span>
                        </a>
                    </li>
                </ul>
            </section>
            <!-- /.sidebar -->
        </aside>
        <!-- =============================================== -->
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <div ng-view></div>
        </div><!-- /.content-wrapper -->
        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>Version</b> 2.0.0
            </div>
            <strong>Copyright &copy; 2015-@DateTime.Today.Year Vorward IT Services Ltd.</strong> All rights reserved.
        </footer>
    </div><!-- ./wrapper -->
    <!-- jQuery 2.1.4 -->
    @Scripts.Render("~/bundles/jquery")
    <!-- Bootstrap 3.3.5 -->
    <script src="~/Scripts/bootstrap.min.js"></script>
    <!-- SlimScroll -->
    @*<script src="~/Scripts/jquery.slimscroll.min.js"></script>*@
    <!-- FastClick -->
    <script src="~/Scripts/fastclick.js"></script>
    <script src="~/Content/codemirror5/lib/codemirror.min.js"></script>
    <script src="~/Content/codemirror5/addon/display/fullscreen.js"></script>
    <script src="~/Content/codemirror5/mode/css/css.js"></script>
    <script src="~/Content/codemirror5/mode/javascript/javascript.js"></script>
    <script src="~/Content/codemirror5/mode/xml/xml.js"></script>
    <script src="~/Content/codemirror5/mode/htmlmixed/htmlmixed.js"></script>
    <!-- AdminLTE App -->
    <script>
        var adminAppGlobalSettings = {
            defaultSiteId: '@ViewBag.DefaultSiteId'
        };
    </script>
    <script src="~/adminApp/adminLTE.min.js"></script>
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/i18n/angular-locale_de-de.js"></script>
    <script src="~/Scripts/angular-route.min.js"></script>
    <script src="~/Scripts/angular-animate.min.js"></script>
    <script src="~/adminApp/app.js"></script>
    <script src="~/adminApp/Directives/LoadingDirective.js"></script>
    <script src="~/adminApp/Directives/ActiveLinkDirective.js"></script>
    <script src="~/adminApp/Directives/FileModelDirective.js"></script>
    <script src="~/adminApp/Factories/SiteFactory.js"></script>
    <script src="~/adminApp/Factories/LayoutFactory.js"></script>
    <script src="~/adminApp/Factories/PageLayoutFactory.js"></script>
    <script src="~/adminApp/Factories/PageFactory.js"></script>
    <script src="~/adminApp/Factories/AssetFactory.js"></script>
    <script src="~/adminApp/Factories/ContentFactory.js"></script>
    <script src="~/adminApp/Factories/UserFactory.js"></script>
    <script src="~/adminApp/Controllers/WelcomeController.js"></script>
    <script src="~/adminApp/Controllers/SiteController.js"></script>
    <script src="~/adminApp/Controllers/LayoutController.js"></script>
    <script src="~/adminApp/Controllers/PageLayoutController.js"></script>
    <script src="~/adminApp/Controllers/PageController.js"></script>
    <script src="~/adminApp/Controllers/AssetController.js"></script>
    <script src="~/adminApp/Controllers/ContentController.js"></script>
    <script src="~/adminApp/Controllers/MenuController.js"></script>
    <script src="~/adminApp/Controllers/UserController.js"></script>
</body>
</html>
